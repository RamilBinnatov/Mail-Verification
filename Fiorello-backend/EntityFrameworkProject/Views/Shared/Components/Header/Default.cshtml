@model HeaderVM


<header>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg d-flex d-lg-block justify-content-between d-xl-flex navbar-light py-3 py-lg-0">
                    <a class="navbar-brand" href="#">
                        <img src="~/img/@Model.Settings["HeaderLogo"]" alt="" id="logo">
                        @if (User.Identity.IsAuthenticated)
                        {<span class="text-danger">@User.Identity.Name</span>}
                        else
                        {
                    
                        }
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" id="mobile-navbar-show">
                        <span class="navbar-toggler-icon" style="font-size: 12px;"></span>
                    </button>

                    <div class="collapse navbar-collapse d-none d-lg-block" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" style="position:relative; top:2px;" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="px-1" style="position:relative; top:8px;"  asp-controller="Product" asp-action="Index">Products</a>
                            </li>


                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item shop-li">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-area="AdminArea" asp-controller="DashBoard" asp-action="Index">AdminPanel</a>
                            </li>
                            <li class="nav-item my-auto search">
                                <i class="fas fa-search" id="search"></i>
                                <ul class="list-unstyled py-3">
                                    <li class="d-flex px-3">
                                        <input id="input-search" type="text" placeholder="Search">
                                        <i class="fas fa-search my-auto" id="search"></i>
                                    </li>

                                </ul>
                            </li>
                            <li class="nav-item my-auto shop-cart">
                                <a asp-controller="Basket" asp-action="Index">
                                    <i class="fas fa-shopping-bag"></i>
                                    <sup class="rounded-circle">@Model.Count</sup>
                                    <span>CART ($0)</span>
                                </a>
                                <ul class="list-unstyled py-3">
                                    <li class="">No products in the cart.</li>
                                </ul>
                            </li>

                        </ul>
                    </div>

                </nav>
            </div>
        </div>
        <div class="mobile-navbar position-absolute shadow-lg h-100 p-5">
            <i class="fas fa-times fa-lg" id="mobile-navbar-close"></i>
            <ul class="list-unstyled">
                <li><a href="#">Home <i class="fas fa-caret-right fa-sm"></i></a></li>

                <li><a href="#">Login <i class="fas fa-caret-right fa-sm"></i></a></li>

                <li><a href="#">Register <i class="fas fa-caret-right fa-sm"></i></a></a></li>

                <li><a href="#">Log out <i class="fas fa-caret-right fa-sm"></i></a></a></li>

                <li><a href="#">Blog <i class="fas fa-caret-right fa-sm"></i></a></a></li>

                <li><a href="#">Elements <i class="fas fa-caret-right fa-sm"></i></a></a></li>
                <ul class="list-unstyled py-3">
                    <li class="">
                        <a class="px-3" href="#">PRODUCT TYPES <i class="fas fa-caret-right fa-sm"></i></a>
                    </li>
                    <ul class="list-unstyled py-3">
                        <li class=""><a class="px-3" href="">Product Types 1</a></li>
                        <li class=""><a class="px-3" href="">Product Types 2</a></li>
                        <li class=""><a class="px-3" href="">Product Types 3</a></li>
                    </ul>
                    <li class="">
                        <a class="px-3" href="#">SHOP PAGES <i class="fas fa-caret-right fa-sm"></i></a>
                    </li>
                    <ul class="list-unstyled py-3">
                        <li class=""><a class="px-3" href="">Product Types 1</a></li>
                        <li class=""><a class="px-3" href="">Product Types 2</a></li>
                        <li class=""><a class="px-3" href="">Product Types 3</a></li>
                    </ul>
                    <li class="">
                        <a class="px-3" href="#">SHOP TYPES <i class="fas fa-caret-right fa-sm"></i></a>
                    </li>
                    <ul class="list-unstyled py-3">
                        <li class=""><a class="px-3" href="">Product Types 1</a></li>
                        <li class=""><a class="px-3" href="">Product Types 2</a></li>
                        <li class=""><a class="px-3" href="">Product Types 3</a></li>
                    </ul>
                </ul>
            </ul>
        </div>
    </div>

</header>